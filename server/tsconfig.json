{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/*": ["src/config/*"],
      "@environments/*": ["src/environments/*"],
      "@modules/*": ["src/modules/*"],
      "@resolvers/*": ["src/resolvers/*"],
      "@services/*": ["src/services/*"],
      "@entities/*": ["src/entities/*"]
    }
  }
}
